/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run nf-core/isoseq -profile test,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

resume = true
workDir = './nextflow_work'

params {
    config_profile_name        = 'Test profile - Minimap2 path'
    config_profile_description = 'Minimal test dataset to check pipeline function'

    // Limit resources so that this can run on GitHub Actions
    max_cpus   = 2
    max_memory = '6.GB'
    max_time   = '6.h'

    // Input data
    input           = "${launchDir}/testdata/samplesheet_local.csv"
    //outdir        = "${launchDir}/testdata_resuts/test_minimap2"
    primers         = "${launchDir}/testdata/primers.fasta"
    fasta           = "${launchDir}/testdata/reference/Homo_sapiens.GRCh38.dna.chromosome.19.fasta"
    rq              = 0.9
    chunk           = 5
    five_prime      = 100
    splice_junction = 10
    three_prime     = 100
    capped          = true
    aligner         = 'minimap2'
    }
    process {
        stageInMode = 'copy'
    }

    docker {
        runOptions = '--platform linux/amd64'
    }
