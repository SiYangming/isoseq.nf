/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests (ULTRA + bamtools_convert entrypoint)
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Minimal test dataset to check pipeline function using ULTRA aligner and bamtools_convert entrypoint.

*/

resume = true
workDir = './nextflow_work'

params {
    config_profile_name        = 'Test profile - ULTRA path - Entrypoint bamtools_convert'
    config_profile_description = 'Minimal test dataset to check pipeline function (ultra + bamtools_convert)'

    max_cpus   = 4
    max_memory = '6.GB'
    max_time   = '6.h'

    input           = "${launchDir}/testdata/samplesheet_bamtools_convert_entrypoint_local.csv"
    outdir          = "${launchDir}/testdata_results/test_ultra_bamtools_convert_entrypoint"
    primers         = "${launchDir}/testdata/primers.fasta"
    fasta           = "${launchDir}/testdata/reference/Homo_sapiens.GRCh38.dna.chromosome.19.fasta"
    gtf             = "${launchDir}/testdata/reference/Homo_sapiens.GRCh38.104.chr.13_18_19.gtf"

    chunk           = 40
    five_prime      = 100
    splice_junction = 10
    three_prime     = 100
    capped          = true

    aligner         = 'ultra'
    entrypoint      = 'bamtools_convert'
}
docker {
    runOptions = '--platform linux/amd64'
}
